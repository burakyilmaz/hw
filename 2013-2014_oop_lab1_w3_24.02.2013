/* A simple calculator does the arithmetical operation which user has entered.
 * Inputs have to be integers, else app crashes.
 */

package samplecalc;
import java.util.Scanner;

public class SampleCalc {

    public static void main(String[] args) {
        
        int num1 = 0;
        int num2 = 0;
        int sum = 0;
        String op;
        
        Scanner klavye = new Scanner(System.in);

        System.out.println("Enter first integer");
        try
        {
            num1 = klavye.nextInt();
        } 
        catch (Exception e)
        {
            System.out.println("Not an integer");
            System.exit(-1);
        }
        
        System.out.println("Enter second integer");
        try 
        {
            num2 = klavye.nextInt();
        }
        catch (Exception e)
        {
            System.out.println("Not an integer");
            System.exit(-1);
        }
        
        System.out.println("Enter operation");
        op = klavye.next();
        
        if(op.equals("+"))
            sum = num1 + num2;
        else if (op.equals("-"))
                sum = num1 - num2;
        else if (op.equals("*"))
            sum = num1 * num2;
        else if (op.equals("/"))
            if (num2 == 0)
            {
                System.out.println("Second integer can not be 0");
                System.exit(-1);
            }
            else
                sum = num1 / num2;
        else if (op.equals("%"))
            sum = num1 % num2;
        else
        {
            System.out.println("Invalid operation");
            System.exit(-1);
        }
        
        System.out.printf("Sum: %d\n\n",sum);
                    
    }
}
